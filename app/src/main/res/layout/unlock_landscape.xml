<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="7"
    android:rowCount="4"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/one"
        android:text="1"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"
        android:textColor="#323232"/>

    <Button
        android:id="@+id/two"
        android:text="2"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"
        android:textColor="#323232"/>

    <Button
        android:id="@+id/three"
        android:text="3"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"
        android:textColor="#323232"/>

    <TextView
        android:id="@+id/timer"
        android:text="00:10"
        android:layout_height="fill_parent"
        android:background="#b0b0b0"
        android:textColor="#323232"
        android:gravity="center"
        android:layout_rowSpan="2"
        android:layout_columnSpan="4"
        android:textSize="70dp"
        android:layout_span="4"/>

    <Button
        android:id="@+id/four"
        android:text="4"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"
        android:textColor="#323232"/>

    <Button
        android:id="@+id/five"
        android:text="5"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"
        android:textColor="#323232"/>

    <Button
        android:id="@+id/six"
        android:text="6"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"
        android:textColor="#323232"/>

    <Button
        android:id="@+id/seven"
        android:text="7"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"
        android:textColor="#323232"/>

    <Button
        android:id="@+id/eight"
        android:text="8"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"
        android:textColor="#323232"/>

    <Button
        android:id="@+id/nine"
        android:text="9"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"
        android:textColor="#323232"/>


    <TableLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:weightSum="1">

        <TableRow
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:layout_columnSpan="4"
            android:background="#b0b0b0">

            <TextView
                android:id="@+id/text_password_1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="  "
                android:background = "@drawable/roundedbutton_space"
                android:padding="16dp"/>

            <TextView
                android:id="@+id/text_password_2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_span="1"
                android:gravity="center"
                android:text="  "
                android:layout_columnSpan="1"
                android:background = "@drawable/roundedbutton_space"
                android:padding="16dp"/>

            <TextView
                android:id="@+id/text_password_3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_span="1"
                android:text="  "
                android:gravity="center"
                android:layout_columnSpan="1"
                android:background = "@drawable/roundedbutton_space"
                android:padding="16dp"/>


            <TextView
                android:id="@+id/text_password_4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_span="1"
                android:gravity="center"
                android:text="  "
                android:layout_columnSpan="1"
                android:background = "@drawable/roundedbutton_space"
                android:padding="16dp"/>
        </TableRow>
    </TableLayout>


    <Button
        android:id="@+id/back"
        android:text="Back"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"
        android:textColor="#323232"
        />

    <Button
        android:id="@+id/zero"
        android:text="0"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"
        android:textColor="#323232"
        />

    <Button
        android:id="@+id/clear"
        android:text="Clear"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"
        android:textColor="#323232"
        />



    <Button
        android:id="@+id/enter"
        android:layout_gravity="fill"
        android:layout_columnSpan="4"
        android:layout_weight="1"
        android:background = "@drawable/roundedbutton"
        android:text="Enter"
        />

</GridLayout>