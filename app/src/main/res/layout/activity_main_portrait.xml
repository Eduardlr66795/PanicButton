<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:padding="10dip">
    <LinearLayout
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical">





        <Button
            android:id="@+id/button_walkSafe"
            android:text="WalkSafe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor ="#303030"
            android:layout_weight="1"
            android:drawableLeft="@drawable/phone"
            android:layout_centerHorizontal="true"
            >
        </Button>


        <Button
            android:id="@+id/button_emergency"
            android:text="Emergency"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor ="#303030"
            android:layout_weight="1"
            android:drawableLeft="@drawable/any"
            android:layout_centerHorizontal="true"
            >
        </Button>

        <Button
            android:id="@+id/button_locate"
            android:text="Location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor ="#303030"
            android:layout_weight="1"
            android:drawableLeft="@drawable/fbmessenger"
            android:layout_centerHorizontal="true"

            >
        </Button>

        <Button
            android:id="@+id/button_quit"
            android:text="Quit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor ="#303030"
            android:layout_weight="1"
            android:drawableLeft="@drawable/drawer"
            android:layout_centerHorizontal="true"

            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
